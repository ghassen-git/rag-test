# OpenAI Configuration
OPENAI_API_KEY=sk-proj-xxxxx
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4-turbo
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# Mathpix OCR Configuration
MATHPIX_APP_ID=your_app_id_here
MATHPIX_APP_KEY=your_app_key_here
MATHPIX_API_URL=https://api.mathpix.com/v3/text

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=books_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017
MONGO_DB=books_reviews
MONGO_USER=mongo
MONGO_PASSWORD=mongo123

# Milvus Configuration
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=book_embeddings
MILVUS_INDEX_TYPE=HNSW
MILVUS_METRIC_TYPE=IP
MILVUS_DIMENSION=1536

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_BOOKS=books.public.books
KAFKA_TOPIC_REVIEWS=reviews.books_reviews.reviews
KAFKA_TOPIC_PDFS=pdfs.processed
KAFKA_CONSUMER_GROUP=rag-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest

# Debezium Configuration
DEBEZIUM_CONNECTOR_URL=http://debezium:8083
DEBEZIUM_POSTGRES_CONNECTOR=postgres-connector
DEBEZIUM_MONGO_CONNECTOR=mongo-connector

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
CHUNK_SIZE=600
CHUNK_OVERLAP=100
TOP_K_RESULTS=5

# Rate Limiting
EMBEDDING_RATE_LIMIT=50
EMBEDDING_RATE_PERIOD=1
OCR_RATE_LIMIT=10
OCR_RATE_PERIOD=1

# Redis Cache (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=604800

# Blob Storage (for temporary file uploads via API)
BLOB_STORAGE_PATH=/data/pdfs
